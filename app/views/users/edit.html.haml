#account-page.account-page
  = stylesheet_link_tag "users/update", :media => "all"
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 アカウントの編集
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :なまえ（８文字以内）
          .field-input
            = f.text_field :name, maxlength:8, autofocus: true
        .field
          .field-label
            = f.label :メール
          .field-input
            = f.email_field :email
        .actions
          = f.submit "更新", class: 'btn2'