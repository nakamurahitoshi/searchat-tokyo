- if controller_name != 'sessions'
  = link_to "ログイン", new_session_path(resource_name), class: 'btn'
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "新規登録", new_registration_path(resource_name), class: 'btn'
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "パスワード失念", new_password_path(resource_name),class: 'btn'
  %br/
