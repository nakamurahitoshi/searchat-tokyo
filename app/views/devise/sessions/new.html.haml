= content_for :css do
  = stylesheet_link_tag "users/edit"
#account-page.account-page
  %span.image-yamanoteline-1
    = image_tag "/assets/train_e235_yamanote.png", size: "150x60"
  %span.image-yamanoteline-2
    = image_tag "/assets/train_e235_yamanote.png", size: "150x60"
  %span.image-yamanoteline-3
    = image_tag "/assets/train_e235_yamanote.png", size: "150x60"
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 SEARCHAT-TOKYO
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          .field-label
            = f.label :メール
          .field-input
            = f.email_field :email, autofocus: true
          .field
            .field-label
              = f.label :パスワード
              %i (半角英数字８文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off"
            .actions
              = f.submit "ログイン", class: 'btn'