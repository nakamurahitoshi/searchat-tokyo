= content_for :css do
  = stylesheet_link_tag "users/edit"
#account-page.account-page
  %span.image-yamanoteline-1
    = image_tag "/assets/train_e235_yamanote.png", size: "150x60"
  %span.image-yamanoteline-2
    = image_tag "/assets/train_e235_yamanote.png", size: "150x60"
  %span.image-yamanoteline-3
    = image_tag "/assets/train_e235_yamanote.png", size: "150x60"
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 アカウント作成
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :メール
          .field-input
            = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          .field-label
            = f.label :なまえ（８文字以内）
          .field-input
            = f.text_field :name, maxlength:8, autofocus: true
        .field
          .field-label
            = f.label :パスワード（半角英数字８文字以上）
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード（確認）
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        
        .field
          .field-label
          - f.label :point
          .field-input
          = f.hidden_field :point, value: 0

          .actions
          = f.submit "アカウント作成", class: 'btn'
