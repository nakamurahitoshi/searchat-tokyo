= content_for :css do
  = stylesheet_link_tag "users/edit", :media => "all"
#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 アカウント作成
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :メール
          .field-input
            = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          .field-label
            = f.label :なまえ
          .field-input
            = f.text_field :name, autofocus: true, autocomplete: "name"
        .field
          .field-label
            = f.label :パスワード
            %i (数字6文字)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード（確認）
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        
        .field
          .field-label
          - f.label :point
          .field-input
          = f.hidden_field :point, value: 0

          .actions
          = f.submit "アカウント作成", class: 'btn'
