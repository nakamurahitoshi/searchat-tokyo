= content_for :css do
  = stylesheet_link_tag "messages/index", :media => "all"
= content_for :js do
  = javascript_include_tag "messages/index"
.contents
  .left-content
    .railway
    - @railways.each_with_index do |railway, n|
      .railway__name
        =railway.name
        .railway__list
          -for i in 0..@stations[n].length-1
            .railway__list__box
              =@stations[n][i].name
            .railway__list__line
              ||

  .right-content
    .chat-header
      .chat-header__name
        %a.chat-header__station-name
          = @station.name
        .chat-header__commmon-name
          　えきのチャット
      .chat-header__btn
        =link_to users_path, method: :post, class: "chat-header__favorite-btn" do
          =fa_icon 'star'
    .messages
      = render partial: 'message', collection: @messages
    .form
      -# %form.form__box
      -#   %input{type: "text", placeholder: "type a message", class: "form__message"}
      -#   %input{type: "submit", value: "Send", class: "form__button"}
      = form_for [@station, @message], html: {class: 'form__box'} do |f|
        = f.text_field :body, class: 'form__message', placeholder: 'type a message'
        = f.submit 'Send', class: 'form__button'